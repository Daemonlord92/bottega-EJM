
<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "3JMCodings Portfolio", sticky: false) %>
  <%= js add_gritter(flash[:notice], :title => "3JMCodings Portfolio", :sticky => false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "3JMCodings Portfolio", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "3JMCodings Portfolio", sticky: false) %>
<% end %>