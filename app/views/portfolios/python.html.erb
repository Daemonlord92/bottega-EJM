      <div class="container">

        <div class="row">


<h1>Python based Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_url %>

<%= @python_portfolio_items.each do |portfolio_item| %>
    <div class="card">
    
    <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
    <p class="card-text"><%= portfolio_item.subtitle %></p>

    <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>

 
    </div> 
<% end %>

        </div>

